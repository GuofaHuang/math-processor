<Window x:Class="MathProcessor.GamentryAd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        Title="FREE Online Jigsaw Puzzles" Height="450" Width="600">
    <StackPanel Width="500" HorizontalAlignment="Center">
        <TextBlock Cursor="Hand" FontSize="22" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" Foreground="Brown" HorizontalAlignment="Center" Margin="0,20,0,20">Solve Free Online Jigsaw Puzzles</TextBlock>
        <Image Cursor="Hand" MouseLeftButtonDown="Image_MouseLeftButtonDown" Source="images/jigsaw_new.png" HorizontalAlignment="Center" Width="300" />
        <StackPanel Orientation="Horizontal" Margin="0,20,0,20" HorizontalAlignment="Center">
            <Button FontSize="18" Click="SolveButton_Click" Margin="0,0,20,0" Width="108">Solve Now</Button>
            <Button FontSize="18" Click="CancelButton_Click" Width="108">Cancel</Button>
        </StackPanel>
        <CheckBox FontSize="16" Checked="DoNotShow_Checked" Unchecked="DoNotShow_UnChecked">Do not show this again.</CheckBox>
    </StackPanel>
</Window>
